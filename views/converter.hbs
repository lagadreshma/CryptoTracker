<body>

    <section class="navbar">
        <nav>
            <div class="logo">
          <a href="/"><h2>Crypto<span>Verse</span></h2></a>
      </div>

        <div class="navitems" id="navlinks">

           <i class = "fa fa-times" onclick= "show();"></i>

          <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/cryptocurrency"> Cryptocurrency </a></li>
        <li><a href="/news"> News </a></li>
        <li><a href="/converter"> Converter </a></li>
        <li><a href="/register"> Sign Up </a></li>
        <li class="sign-in"><a href="/login"> Sign In </a></li>
      </ul>
        </div>

        <i class = "fa fa-bars" onclick= "hide();"></i>
      
        </nav>
    </section>

    <div class="wrapper">

        <header class="heading"> Currency Converter </header>

        <form action="#">

            <div class="amount">
                <p> Enter Amount : </p>
                <input type="text" value="">
            </div>

            <div class="drop-list">

                <div class="from">
                    <p> From </p>
                    <div class="select-box">
                        <img src="https://flagcdn.com/48x36/us.png" alt="">
                        <select>
                            <!-- <option value="USD">USD</option>
                          <option value="INR">INR</option>
                          <option value="NPR">NPR</option>
                          <option value="PKR">PKR</option>
                          <option value="MAD">MAD</option> -->
                        </select>
                    </div>
                </div>

                <div class="icon">
                    <i class="fas fa-exchange-alt"> </i>
                </div>

                <div class="to">
                    <p> To </p>
                    <div class="select-box">
                        <img src="https://flagcdn.com/48x36/in.png" alt="flag">
                        <select>
                            <!-- <option value="INR">INR</option>
                          <option value="USD">USD</option>
                          <option value="NPR">NPR</option>
                          <option value="PKR">PKR</option>
                          <option value="MAD">MAD</option> -->
                        </select>
                    </div>
                </div>

            </div>

            <div class="exchange-rate"> </div>
            <button> Get Exchange Rate </button>

        </form>

    </div>

    <script src="/country_list.js"></script>
    <script src="/script.js"></script>
    <script src="/main.js"></script>

